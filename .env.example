# FLASH API Environment Configuration
# Copy this file to .env and update values for your environment

# Environment
ENVIRONMENT=development
DEBUG=true

# API Configuration
API_PORT=8000
API_HOST=0.0.0.0
SECRET_KEY=your-secret-key-here-change-in-production

# Security
ALLOWED_ORIGINS=http://localhost:3000,https://app.flash-platform.com
ALLOWED_HOSTS=localhost,*.flash-platform.com
API_KEYS=key1,key2,key3  # Comma-separated list of valid API keys

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Model Configuration
MODEL_BASE_PATH=models/v2_enhanced
PILLAR_MODEL_PATH=models/v2
MODEL_CACHE_SIZE=5

# Logging
LOG_LEVEL=INFO

# Database (future use)
# DATABASE_URL=postgresql://user:password@localhost/flash

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Feature Flags
ENABLE_EXPLANATION_API=true
ENABLE_BATCH_PREDICTIONS=false

# Limits
MAX_REQUEST_SIZE=1048576
MAX_BATCH_SIZE=100